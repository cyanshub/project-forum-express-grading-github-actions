{{!-- 使用者資訊 --}}
<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img class="img-responsive center-block mb-3" src="{{user.image}}" style="width: 300px;" alt="使用者圖像">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
          <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
      </div>
    </div>
  </div>
</div>

{{!-- 使用者評論過餐廳 --}}
<div class="card">
  <div class="card-header">
    {{#if user.Comments}}
    已評論餐廳: {{user.Comments.length}}家
    {{else}}目前尚未評論餐廳...
    {{/if}}
  </div>
  <div class="card-body d-flex flex-row bd-highlight align-items-center flex-wrap"
    style="background: white; height: auto; cursor:pointer">
    {{#each user.Comments}}
    <a href="/restaurants/{{this.restaurantId}}">
      <img src="{{this.Restaurant.image}}" class="img-thumbnail ms-1"
        style="max-width: 150px; max-height: 150px;" alt="{{this.Restaurant.name}}">
    </a>
    {{/each}}
  </div>
</div>
