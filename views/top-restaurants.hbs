{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />

<div class="container d-flex flex-column">
  {{#each restaurants}}
  <div class="card mb-3" style="width: 540px; margin: 0 auto;">
    <div class="row g-0">
      {{!-- 卡片左側 --}}
      <div class="col-4">
        <a href="/restaurants/{{this.id}}">
          {{#if this.image}}
          <img src="{{this.image}}" class="img-fluid rounded-start" width="140px" height="140px"
            style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;" />
          {{else}}
          <img src="https://fakeimg.pl/140/" class="img-fluid rounded-start" width="140px" height="140px" />
          {{/if}}
        </a>
      </div>

      {{!-- 卡片右側 --}}
      <div class="col-8">
        <div class="card-body">
          <h5 class="card-title">
            <a href="/restaurants/{{this.id}}">{{this.name}}</a>
          </h5>

          <span class="bg-secondary badge">追蹤人數：{{this.favoriteCounts}}</span>
          <p class="card-text">{{this.description}}</p>

          <div>
            <a class="btn btn-primary" href="/restaurants/{{this.id}}">
              Show
            </a>
            {{!-- 加入收藏按鈕 --}}
            {{#if isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
              <button type="submit" class="btn btn-danger">移除最愛</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
              <button type="submit" class="btn btn-primary">加到最愛</button>
            </form>
            {{/if}}
          </div>

        </div>
      </div>
    </div>
  </div>

  {{/each}}
</div>

