{{!-- 使用 row 搭配 col 排版各個區塊 --}}
<div class="row">

  {{!-- 獨佔上方區塊 --}}
  <div class="col-12">
    {{!-- 使用者資訊 --}}
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img class="img-responsive center-block mb-3" src="{{user.image}}" style="width: 300px;" alt="使用者圖像">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">{{user.name}}</h5>
            <p class="card-text">{{user.email}}</p>
            <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
            <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{!-- 左側區塊 --}}
  <div class="col-4">

    {{!-- 我追蹤的使用者 --}}
    <div class="card">
      <div class="card-header">
        {{#if user.Followings}}
        訂閱數: {{user.Followings.length}}位
        {{else}}目前尚未訂閱其他使用者...
        {{/if}}
      </div>
      <div class="card-body d-flex flex-row bd-highlight align-items-center flex-wrap"
        style="background: white; height: auto; cursor:pointer">
        {{#each user.Followings}}
        <a href="/users/{{this.id}}">
          {{#if this.image}}
          <img src="{{this.image}}" class="img-thumbnail ms-1" width="140px" height="140px" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
          {{else}}
          <img src="https://fakeimg.pl/140/" class="img-thumbnail ms-1" width="140px" height="140px" />
          {{/if}}
        </a>
        {{/each}}
      </div>
    </div>

    {{!-- 追蹤我的使用者 --}}
    <div class="card">
      <div class="card-header">
        {{#if user.Followers}}
        粉絲數: {{user.Followers.length}}位
        {{else}}目前還沒有粉絲...
        {{/if}}
      </div>
      <div class="card-body d-flex flex-row bd-highlight align-items-center flex-wrap"
        style="background: white; height: auto; cursor:pointer">
        {{#each user.Followers}}
        <a href="/users/{{this.id}}">
          {{#if this.image}}
          <img src="{{this.image}}" class="img-thumbnail ms-1" width="140px" height="140px" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
          {{else}}
          <img src="https://fakeimg.pl/140/" class="img-thumbnail ms-1" width="140px" height="140px" />
          {{/if}}
        </a>
        {{/each}}
      </div>
    </div>

  </div>

  {{!-- 右側區塊 --}}
  <div class="col-8">

    {{!-- 使用者評論過餐廳 --}}
    <div class="card">
      <div class="card-header">
        {{#if user.Comments}}
        已評論餐廳: {{user.Comments.length}}家
        {{else}}目前尚未評論餐廳...
        {{/if}}
      </div>
      <div class="card-body d-flex flex-row bd-highlight align-items-center flex-wrap"
        style="background: white; height: auto; cursor:pointer">
        {{#each user.Comments}}
        <a href="/restaurants/{{this.restaurantId}}">
          <img src="{{this.Restaurant.image}}" class="img-thumbnail ms-1" style="width: 140px; height: 140px;"
            alt="{{this.Restaurant.name}}">
        </a>
        {{/each}}
      </div>
    </div>

    {{!-- 使用者收藏的餐廳 --}}
    <div class="card">
      <div class="card-header">
        {{#if user.FavoritedRestaurants}}
        已收藏餐廳: {{user.FavoritedRestaurants.length}}家
        {{else}}目前尚未收藏餐廳...
        {{/if}}
      </div>
      <div class="card-body d-flex flex-row bd-highlight align-items-center flex-wrap"
        style="background: white; height: auto; cursor:pointer">
        {{#each user.FavoritedRestaurants}}
        <a href="/restaurants/{{this.id}}">
          <img src="{{this.image}}" class="img-thumbnail ms-1" style="width: 140px; max-height: 140px;"
            alt="{{this.name}}">
        </a>
        {{/each}}
      </div>
    </div>

  </div>


</div>